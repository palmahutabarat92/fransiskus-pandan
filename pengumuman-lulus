        // Update Jam Digital
        function updateJam() {
            const now = new Date();
            const hari = ['Minggu', 'Senin', 'Selasa', 'Rabu', 'Kamis', 'Jumat', 'Sabtu'];
            const bulan = ['Januari', 'Februari', 'Maret', 'April', 'Mei', 'Juni', 'Juli', 'Agustus', 'September', 'Oktober', 'November', 'Desember'];
            
            document.getElementById('hari').textContent = `${hari[now.getDay()]}, ${now.getDate()} ${bulan[now.getMonth()]} ${now.getFullYear()}`;
            document.getElementById('jam').textContent = now.toLocaleTimeString('id-ID');
        }
        
        setInterval(updateJam, 1000);
        updateJam();
        
        // Cek Kelulusan
        document.getElementById('cekBtn').addEventListener('click', function() {
            const nisn = document.getElementById('nisn').value.trim();
            const now = new Date();
            const tanggalPengumuman = new Date('2025-05-05T10:00:00+07:00');
            
            // Cek jika input adalah ADMIN
            if (nisn.toLowerCase() === 'admin') {
                showAdminTable();
                createFireworks(10);
                return;
            }
            
            // Cek waktu pengumuman
            if (now < tanggalPengumuman) {
                document.getElementById('popup').style.display = 'flex';
                return;
            }
            
            // Cari siswa berdasarkan NISN
            const siswa = dataSiswa.find(s => s.nisn === nisn);
            
            if (siswa) {
                document.getElementById('dataSiswa').innerHTML = `
                    <p><strong>NAMA:</strong> ${siswa.nama}</p>
                    <p><strong>NIS:</strong> ${siswa.nis}</p>
                    <p><strong>NISN:</strong> ${siswa.nisn}</p>
                    <p><strong>KELAS:</strong> ${siswa.kelas}</p>
                    <p><strong>JURUSAN:</strong> ${siswa.jurusan}</p>
                `;
                
                document.getElementById('statusKelulusan').textContent = siswa.keterangan;
                document.getElementById('downloadBtn').href = `https://example.com/skl/${siswa.nisn}.pdf`;
                
                document.getElementById('hasilKelulusan').style.display = 'block';
                document.querySelector('.cek-kelulusan').style.display = 'none';
                
                // Buat efek kembang api
                createFireworks(5);
            } else {
                alert('NISN tidak ditemukan. Silakan cek kembali NISN Anda.');
            }
        });
        
        // Tampilkan tabel admin
        function showAdminTable() {
            const tableBody = document.getElementById('adminTableBody');
            tableBody.innerHTML = '';
            
            dataSiswa.forEach((siswa, index) => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${index + 1}</td>
                    <td>${siswa.nama}</td>
                    <td>${siswa.nis}</td>
                    <td>${siswa.nisn}</td>
                    <td>${siswa.kelas}</td>
                    <td>${siswa.jurusan}</td>
                    <td>${siswa.keterangan}</td>
                `;
                tableBody.appendChild(row);
            });
            
            document.getElementById('adminSection').style.display = 'block';
            document.getElementById('adminTable').style.display = 'table';
            document.querySelector('.cek-kelulusan').style.display = 'none';
        }
        
        // Tombol Kembali
        document.getElementById('backBtn').addEventListener('click', function() {
            document.getElementById('hasilKelulusan').style.display = 'none';
            document.querySelector('.cek-kelulusan').style.display = 'block';
            document.getElementById('nisn').value = '';
        });
        
        document.getElementById('adminBackBtn').addEventListener('click', function() {
            document.getElementById('adminSection').style.display = 'none';
            document.querySelector('.cek-kelulusan').style.display = 'block';
            document.getElementById('nisn').value = '';
        });
        
        document.getElementById('closePopup').addEventListener('click', function() {
            document.getElementById('popup').style.display = 'none';
        });
        
        // Efek Kembang Api
        function createFireworks(count) {
            for (let i = 0; i < count; i++) {
                setTimeout(() => {
                    const firework = document.createElement('div');
                    firework.className = 'firework';
                    
                    // Posisi acak di layar
                    firework.style.left = `${Math.random() * 100}%`;
                    firework.style.top = `${Math.random() * 100}%`;
                    
                    // Warna acak
                    const colors = ['#ff0000', '#00ff00', '#0000ff', '#ffff00', '#ff00ff', '#00ffff'];
                    firework.style.boxShadow = `0 0 10px 5px ${colors[Math.floor(Math.random() * colors.length)]}`;
                    
                    document.body.appendChild(firework);
                    
                    // Hapus setelah animasi selesai
                    setTimeout(() => {
                        firework.remove();
                    }, 1000);
                }, i * 200);
            }
        }
        
        // Blokir Inspect Element dan shortcut keyboard
        document.addEventListener('contextmenu', function(e) {
            e.preventDefault();
            alert('ANDA MAU NGAPAIN GUYS, JANGAN BURU BURU LAH. PELAN PELAN SAJA LOH. SANTAIIII.');
        });
        
        document.addEventListener('keydown', function(e) {
            // Blokir Ctrl+Shift+I, Ctrl+Shift+J, Ctrl+Shift+C, Ctrl+U
            if (e.ctrlKey && e.shiftKey && (e.keyCode === 73 || e.keyCode === 74 || e.keyCode === 67)) {
                e.preventDefault();
                alert('ANDA MAU NGAPAIN GUYS, JANGAN BURU BURU LAH. PELAN PELAN SAJA LOH. SANTAIIII.');
            }
            
            if (e.ctrlKey && e.keyCode === 85) {
                e.preventDefault();
                alert('ANDA MAU NGAPAIN GUYS, JANGAN BURU BURU LAH. PELAN PELAN SAJA LOH. SANTAIIII.');
            }
        });
    </script>
</body>
